<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:gravity="center"
            android:fontFamily="@font/capriola"
            android:layout_margin="20dp"
            android:textSize="@dimen/text_medium_size" />

        <EditText
            android:id="@+id/old_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:hint="Enter old password / PIN"
            android:focusable="true" />

        <EditText
            android:id="@+id/change_password_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter new password / PIN"
            android:layout_margin="15dp" />

        <EditText
            android:id="@+id/change_password_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter new password / PIN again"
            android:layout_margin="15dp" />

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="@color/white"
            android:layout_margin="20dp"
            android:background="@drawable/btn_shape_capsule_safe" />

    </LinearLayout>

</LinearLayout>